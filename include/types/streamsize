#ifndef __STREAMSIZE__
#define __STREAMSIZE__

#include <cstddef>

#if !defined(__STREAMSIZE_DEFINED__)
# define __STREAMSIZE_DEFINED__
namespace std{
    using streamsize = std::ptrdiff_t;
}
#endif /* !defined(__STREAMSIZE_DEFINED__) */

#endif /* __STREAMSIZE__ */
