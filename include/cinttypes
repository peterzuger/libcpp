 * @brief  C Format conversion of integer types
 */
#ifndef __CINTTYPES__
#define __CINTTYPES__

#include <cstdint>
#include <inttypes.h>

namespace std{
    // types
    using ::imaxdiv_t;

    //functions
    using ::imaxabs;
    using ::imaxdiv;

    using ::strtoimax;
    using ::strtoumax;

    using ::wcstoimax;
    using ::wcstoumax;

    std::intmax_t abs(std::intmax_t);
    std::imaxdiv_t div(std::intmax_t, std::intmax_t);
}

#endif /* __CINTTYPES__ */
