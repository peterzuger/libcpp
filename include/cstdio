/**
 * @file   cstdio
 * @author Peter Zueger
 * @date   27.07.2018
 * @brief  C Input/Output
 */
#ifndef __CSTDIO__
#define __CSTDIO__

#include <stdio.h>

namespace std{
    // types
    using ::size_t;
    using ::FILE;
    using ::fpos_t;
    using ::va_list;

    // Operations on files
    using ::remove;
    using ::rename;
    using ::tmpfile;
    using ::tmpnam;

    // File access functions
    using ::fclose;
    using ::fflush;
    using ::fopen;
    using ::freopen;
    using ::setbuf;
    using ::setvbuf;

    // Formatted input/output functions
    using ::fprintf;
    using ::fscanf;
    using ::printf;
    using ::scanf;
    using ::snprintf;
    using ::sprintf;
    using ::sscanf;
    using ::vfprintf;
    using ::vfscanf;
    using ::vprintf;
    using ::vscanf;
    using ::vsnprintf;
    using ::vsprintf;
    using ::vsscanf;

    // Character input/output functions
    using ::fgetc;
    using ::fgets;
    using ::fputc;
    using ::fputs;
    using ::getc;
    using ::getchar;
    using ::putc;
    using ::putchar;
    using ::puts;
    using ::ungetc;

    // Direct input/output functions
    using ::fread;
    using ::fwrite;

    // File positioning functions
    using ::fgetpos;
    using ::fseek;
    using ::fsetpos;
    using ::ftell;
    using ::rewind;

    // Error-handling functions
    using ::clearerr;
    using ::feof;
    using ::ferror;
    using ::perror;
}

#endif /* __CSTDIO__ */
