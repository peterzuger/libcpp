#ifndef ____EXCHANGE__
#define ____EXCHANGE__

#include <__move>

namespace std{
    // 23.2.4, exchange
    template<class T, class U = T>
    T exchange(T& obj, U&& new_val){
        T old_val = std::move(obj);
        obj = std::forward<U>(new_val);
        return old_val;
    }
}

#endif /* ____EXCHANGE__ */
