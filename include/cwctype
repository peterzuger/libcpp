#ifndef __CWCTYPE__
#define __CWCTYPE__

#include <wctype.h>

namespace std {
    // types
    using ::wint_t;
    using ::wctrans_t;
    using ::wctype_t;

    // functions
    using ::iswalnum;
    using ::iswalpha;
    using ::iswblank;
    using ::iswcntrl;
    using ::iswdigit;
    using ::iswgraph;
    using ::iswlower;
    using ::iswprint;
    using ::iswpunct;
    using ::iswspace;
    using ::iswupper;
    using ::iswxdigit;

    using ::iswctype;
    using ::wctype;

    using ::towlower;
    using ::towupper;

    using ::towctrans;
    using ::wctrans;
}

#endif /* __CWCTYPE__ */
